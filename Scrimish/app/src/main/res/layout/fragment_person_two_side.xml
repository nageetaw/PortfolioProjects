<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PersonTwoSideFragment">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/player_two_pile_one"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:src="@drawable/green" />

        <ImageView
            android:id="@+id/player_two_pile_two"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:src="@drawable/green" />

        <ImageView
            android:id="@+id/player_two_pile_three"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:src="@drawable/green" />

        <ImageView
            android:id="@+id/player_two_pile_four"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:src="@drawable/green" />

        <ImageView
            android:id="@+id/player_two_pile_five"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:src="@drawable/green" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="horizontal">



            <ImageView
                android:id="@+id/playerTwoImage"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/female"
                tools:src="@tools:sample/avatars" />


        </LinearLayout>

        <TextView
            android:id="@+id/playerTwoName"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="name" />
    </LinearLayout>

</LinearLayout>