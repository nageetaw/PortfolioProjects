<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HCI" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#00827F</item>
        <item name="colorPrimaryVariant">#00827F</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="shapeAppearanceSmallComponent">@style/shapeAppearance.HCIApp.SmallComponnent
        </item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="shapeAppearance.HCIApp.SmallComponnent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Theme.HCI.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HCI.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HCI.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>